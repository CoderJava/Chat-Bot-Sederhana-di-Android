<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_panah_kiri"
        android:background="@drawable/panah_item_sisi_kiri"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_pesan_item_sisi_kiri"
        android:text="Hello juga"
        android:layout_toRightOf="@+id/text_view_panah_kiri"
        android:layout_toEndOf="@+id/text_view_panah_kiri"
        android:textSize="16sp"
        android:textColor="#424242"
        android:background="@drawable/background_item_sisi_kiri"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_waktu_pesan_item_sisi_kiri"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_view_pesan_item_sisi_kiri"
        android:text="Sab, 28 Jan 2017 14:12:45"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        />

</RelativeLayout>